unit POINTS; // Модуль POINTS у Points.pas
Interface
Uses SysUtils; // Для того, щоб використати функцію FloatToStr
Type Point = class // клас Point – точка
Private
x, y, z: Real; // поля класу Point
Public
Constructor Creat(x1, y1, z1: Real); // власний конструктор класу Point
Procedure SetPoint(x1, y1, z1: Real); // метод, що встановлює координати точки.
Function GetPoint: String; // метод, що повертає точку у формі рядка
end;
Implementation
Constructor Point.Creat(x1, y1, z1: Real); // реалізація тіла конструктора
Begin
SetPoint(x1, y1, z1);
end;
Procedure Point.SetPoint(x1, y1, z1: Real); // реалізація тіла методу SetPoint
Begin
x := x1; y := y1; z := z1;
end;
Function Point.GetPoint: String; // реалізація тіла методу GetPoint
Begin
 GetPoint:='('+ FloatToStr(x)+ ';'+ FloatToStr(y)+';'+ FloatToStr(z)+')';
end;
end.
